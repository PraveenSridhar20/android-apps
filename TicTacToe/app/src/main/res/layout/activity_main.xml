<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.praveen.tictactoe.MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/grid11"
            android:layout_width="140dp"
            android:layout_height="121dp"
            android:alpha="0"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:tag="11"
            android:translationX="0dp"
            android:translationY="0dp"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/grid12"
            android:layout_width="138dp"
            android:layout_height="121dp"
            android:alpha="0"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:scaleX=".8"
            android:scaleY=".8"
            android:tag="12"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/grid13"
            android:layout_width="138dp"
            android:layout_height="121dp"
            android:alpha="0"
            android:onClick="onClick"
            android:scaleX=".8"
            android:scaleY=".8"
            android:tag="13"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/grid21"
            android:layout_width="140dp"
            android:layout_height="128dp"
            android:alpha="0"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:scaleX=".8"
            android:scaleY=".8"
            android:tag="21"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/grid22"
            android:layout_width="138dp"
            android:layout_height="128dp"
            android:alpha="0"
            android:onClick="onClick"
            android:scaleX=".8"
            android:scaleY=".8"
            android:tag="22"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/grid23"
            android:layout_width="138dp"
            android:layout_height="128dp"
            android:alpha="0"
            android:onClick="onClick"
            android:scaleX=".8"
            android:scaleY=".8"
            android:tag="23"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/grid31"
            android:layout_width="140dp"
            android:layout_height="128dp"
            android:alpha="0"
            android:onClick="onClick"
            android:scaleX=".8"
            android:scaleY=".8"
            android:tag="31"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/grid32"
            android:layout_width="138dp"
            android:layout_height="128dp"
            android:alpha="0"
            android:onClick="onClick"
            android:scaleX=".8"
            android:scaleY=".8"
            android:tag="32"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/grid33"
            android:layout_width="138dp"
            android:layout_height="128dp"
            android:alpha="0"
            android:onClick="onClick"
            android:scaleX=".8"
            android:scaleY=".8"
            android:tag="33"
            app:srcCompat="@drawable/red" />
    </GridLayout>

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:onClick="onButtonClick"
        android:text="Press to play again"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844" />
</android.support.constraint.ConstraintLayout>
